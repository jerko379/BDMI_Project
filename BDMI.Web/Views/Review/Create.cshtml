@using Microsoft.EntityFrameworkCore.Storage
@using System.Web
@using BDMI.Model
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.ApplicationParts
@model BDMI.Model.Review
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager



<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Review List</a></li>
        <li class="breadcrumb-item active" aria-current="page">New Review</li>
    </ol>
</nav>

<div class="row">   
    <div class="col-md-4">
        <form asp-action="Create">
            <partial name="_CreateOrEdit" />
            <div class="form-group">
                <input type="hidden"  value="@ViewBag.MovieId" asp-for="MovieId" />
                <input type="hidden" value="@User.Identity.Name" asp-for="CreatedByUserId"/>
            </div>
        </form>
    </div>
</div>